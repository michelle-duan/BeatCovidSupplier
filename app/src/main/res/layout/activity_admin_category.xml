<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/to_add_a_new_product_please_chose_and_click_a_category_the_new_product_belongs_to"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/facemask"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/regularmask" />

        <ImageView
            android:id="@+id/gloves"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gloves" />

        <ImageView
            android:id="@+id/thermometer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/thermometer" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:src="@drawable/glasses" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/isolationmask"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/isolationmask" />

        <ImageView
            android:id="@+id/otherproducts"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:src="@drawable/otherproducts" />
    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textAllCaps="false"
        />
</RelativeLayout>